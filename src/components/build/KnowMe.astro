---
import { knowMe } from "@/lib/mobileMenu";
---

<section class="mt-20 md:mt-32 lg:mt-40">
  <h2 class="text-3xl md:text-5xl font-bold text-dark dark:text-light">
    Get to know me
  </h2>
  <div class="mt-4 grid grid-cols-1 md:grid-cols-2 gap-8">
    {
      knowMe.map((item, index) => (
        <div class={`bg-light-secondary dark:bg-dark-secondary rounded-md flex flex-col items-center gap-2 p-8 ${index === 2 && "md:col-span-2"}`}>
          <h2 class="font-extrabold text-black dark:text-white text-2xl md:text-3xl">
            {item.title}
          </h2>
          <p class="leading-6">{item.description}</p>

          <div class="flex overflow-hidden h-48 w-full">
            <img
              src={item.image}
              alt=""
              class="w-full h-44 object-contain transition-transform duration-300 ease-in-out hover:-rotate-6 hover:scale-110"
            />
          </div>
        </div>
      ))
    }
  </div>
</section>

