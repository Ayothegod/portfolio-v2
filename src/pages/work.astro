---
import SectionTop from "@/components/build/build-ui/SectionTop.astro";
import MobileLogo from "@/components/ui/MobileLogo.astro";
import MainLayout from "../layouts/MainLayout.astro";
import Projects from "@/components/build/Projects.astro";
import { Button } from "@/components/ui/button";
---

<MainLayout
  title="Adebisi Ayomide - Contact"
  description="Explore a showcase of my web development projects as a Full Stack Developer. Discover the diverse range of applications I've built, highlighting my expertise in both front-end and back-end technologies."
>
  <main class="mb-20 min-h-[40vh]">
    <MobileLogo />

    <SectionTop title="Work" description="Discover the diverse range of applications I've built, highlighting my expertise in both front-end and back-end technologies." />

    <section class="max-w-[1024px] mx-auto px-4 py-6 ">
      <Projects />

      <div
        class="mt-8 p-4 md:p-6 border-2 border-dotted border-light-hover dark:border-dark-hover bg-transparent text-center space-y-6 rounded-md"
      >
        <h3 class="text-black dark:text-white">YOUR PROJECT HERE</h3>
        <p>Let's turn your idea into a reality</p>
        <div>
          <a href="/contact">
            <Button className="w-full md:w-fit md:px-8 md:py-6 text-base"
              >Get in touch</Button
            >
          </a>
        </div>
      </div>
    </section>
  </main>
</MainLayout>
