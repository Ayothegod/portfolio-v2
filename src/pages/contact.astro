---
import MobileLogo from "@/components/ui/MobileLogo";
import MainLayout from "../layouts/MainLayout.astro";
import ContactAction from "@/components/build/Contact"
---

<MainLayout
  title="Adebisi Ayomide - Contact"
  description="Portfolio for all my full stack development works"
>
  <main class=" mb-20 min-h-[40vh]">
    <MobileLogo/>

    <section class="mt-28 md:mt-48 border-b max-w-[1024px] mx-auto p-4">
      <h1 class="text-5xl md:text-7xl font-extrabold">Get in touch</h1>
      <p class="text-neutral-500">Let's build something awesome.</p>
    </section>

    <section class="max-w-[1024px] mx-auto p-4">
      <ContactAction/>
    </section>

  </main>
</MainLayout>
